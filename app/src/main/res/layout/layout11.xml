        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:scaleType="center"
        android:src="@drawable/ui2color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/save"
            android:layout_width="@dimen/width_20_80"
            android:layout_height="@dimen/height_7_80"
            android:layout_marginLeft="@dimen/width_15_80"
            android:background="@drawable/save2" />

        <ImageButton
            android:id="@+id/ignore"
            android:layout_width="@dimen/width_20_80"
            android:layout_height="@dimen/height_7_80"
            android:layout_marginLeft="@dimen/width_9_80"
            android:background="@drawable/ignor0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:background="@drawable/down1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/home0" />

        <ImageButton
            android:id="@+id/treads"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
